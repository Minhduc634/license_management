<odoo>
  <!-- Form View -->
  <record id="view_device_license_form" model="ir.ui.view">
    <field name="name">device.license.form</field>
    <field name="model">device.license</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_generate_password" type="object" string="Generate Password" class="btn-primary" />
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="key"/>
            <field name="password" password="True"/>
            <field name="state"/>
            <field name="create_date" readonly="1"/>
            <field name="activation_date" />
            <field name="expired_date" />
            <field name="device_code" readonly="1"/>
            <field name="device_name"/>
            <field name="device_info" readonly="1"/>
            <field name="user_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Tree View -->
  <record id="view_device_license_tree" model="ir.ui.view">
    <field name="name">device.license.tree</field>
    <field name="model">device.license</field>
    <field name="arch" type="xml">
      <tree>
        <field name="key" string="License Key"/>
        <field name="create_date" string="Ngày tạo"/>
        <field name="activation_date" string="Ngày kích hoạt"/>
        <field name="expired_date" string="Ngày hết hạn"/>
        <field name="device_code" string="Mã thiết bị"/>
        <field name="device_name" string="Tên thiết bị"/>
      </tree>
    </field>
  </record>

  <!-- Action -->
  <record id="action_device_license" model="ir.actions.act_window">
    <field name="name">Device Licenses</field>
    <field name="res_model">device.license</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_device_license_tree"/>
  </record>

  <!-- Menu -->
  <menuitem id="menu_device_license_action" name="Manage Licenses" action="action_device_license" sequence="1" />
</odoo>
